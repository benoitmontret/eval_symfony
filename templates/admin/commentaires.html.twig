{% extends 'baseAdmin.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}

<div>
    <h1>Commentaires</h1>

    <ul>
        {% for comm in commListe %}
            <li>
                <div class="commentaire">
                    <p>{{ comm.titre }} (Id : {{ comm.id }} ) {{ comm.contenu }}</p> 

                <a href="{{path("afficherComm", {id : comm.id}) }}">voir le commentaire</a>
                </div>
            </li> 



        {% endfor %}    
    </ul>


{% endblock %}