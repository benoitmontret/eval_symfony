<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}La grotte du Meeple
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="icon" href="/icons/logo-blanc.webp"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header>
        <div>
			<img class="logo" src="/icons/logo-noir.webp" alt="">
			<p class="title">La grotte du Meeple</p>
        </div>
		<div>
			
			<a href="{{ path('admin') }}"><h1>ADMIN</h1></a>
		</div>
			<nav>
				<ul >
					<li class="link-site">
						<a  href="{{ path('accueil') }}">Retour Ã  l'accueil du site</a>
					</li>
					<li class="admin">
						<a href="{{ path('inventaire') }}">Inventaire des produits</a>
					</li>
					<li class="admin">
						<a href="{{ path('listCommentaire') }}">listing des commentaires</a>
					</li>
					<li class="admin">
						<a href="{{ path('addProduit') }}">Ajouter un produit</a>
					</li>
				</ul>
			</nav>
		</header>

	{% for label, messages in app.flashes %}
	<div class="container">
	<div class="alert-{{label}}">
		{% for message in messages %}
		<h2>{{ message }}</h2>
		{% endfor %}
	</div></div>
	{% endfor %}

		{% block body %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>
</html>
